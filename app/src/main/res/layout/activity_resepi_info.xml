<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seladanghijau.onebookresepi100.activities.Favorite">

    <!-- main layout -->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- The main content view -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivResepiImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#80000040"
                android:layout_marginBottom="83dp"
                android:layout_alignParentBottom="true">

                <TextView
                    android:id="@+id/tvResepiName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="10dp">
                    
                    <LinearLayout
                        android:id="@+id/llFavourite"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true">
                        
                        <ImageView
                            android:id="@+id/ivFavourite"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_star_border_white_100" />

                        <TextView
                            android:text="Favorite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="25sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llShare"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <ImageView
                            android:id="@+id/ivShare"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_share_white_100" />

                        <TextView
                            android:text="Share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#ffffff"
                            android:textSize="25sp"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <!-- bottom panel -->
        <RelativeLayout
            android:id="@+id/rlBottomPanel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:focusableInTouchMode="false"
            android:focusable="false"
            app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
            app:behavior_hideable="true"
            app:behavior_peekHeight="83dp">

            <TabHost
                android:id="@+id/thResepiInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="false"
                android:focusable="false">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#01A89E" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="83dp"
                    android:padding="10dp">

                    <LinearLayout
                        android:id="@+id/tabRingkasan"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvRingkasan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="#000000"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabBahan"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/lvBahan"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:focusable="false" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tabLangkah"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ListView
                            android:id="@+id/lvLangkah"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:clickable="false"
                            android:focusableInTouchMode="false"
                            android:focusable="false" />
                    </LinearLayout>
                </FrameLayout>
            </TabHost>
        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="start"
        android:background="#DFDFD0">

        <!-- chef hat icon -->
        <ImageView
            android:layout_width="132dp"
            android:layout_height="134dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_chef_hat_100"
            android:backgroundTint="#01A89E" />

        <TextView
            android:text="Onebook Resepi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="#01A89E"
            android:textSize="25dp" />

        <!-- horizontal line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#01A89E" />

        <!-- menu -->
        <ListView
            android:id="@+id/lvMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:layout_gravity="left"
            android:dividerHeight="0dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
