<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.seladanghijau.onebookresepi100.activities.Cabutan">

    <!-- The main content view -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:text="Muat turun aplikasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="25sp" />
            <TextView
                android:id="@+id/tvOnebookResepi2000Link"
                android:text="Onebook Resepi 2000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:textSize="25sp"
                android:gravity="center" />

            <TextView
                android:text="Anda berpeluang untuk\nmenyertai cabutan bertuah."
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/btnMuatTurun"
                android:text="Muat turun sekarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#FFFF00"
                android:background="#FF2626" />

            <TextView
                android:text="Sila rujuk syarat-syarat cabutan di"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FF0000"
                android:textSize="20sp"
                android:gravity="center" />

            <TextView
                android:id="@+id/tvWebAdddress"
                android:text="onebook.com.my"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0000FF"
                android:textSize="20sp"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>

    <!-- The navigation drawer -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="start"
        android:background="#DFDFD0">

        <!-- chef hat icon -->
        <ImageView
            android:layout_width="132dp"
            android:layout_height="134dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_chef_hat"
            android:backgroundTint="#01A89E" />

        <TextView
            android:text="Onebook Resepi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="#01A89E"
            android:textSize="25dp" />

        <!-- horizontal line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#01A89E" />

        <!-- menu -->
        <ListView
            android:id="@+id/lvMenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:layout_gravity="left"
            android:dividerHeight="0dp" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
